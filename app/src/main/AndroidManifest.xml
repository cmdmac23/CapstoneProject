<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.capstoneproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=""
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CapstoneProject"
        android:usesCleartextTraffic="true">
        <activity android:name=".CreatePlanner"></activity>
        <activity android:name=".UpdatePlanner"></activity>
        <activity android:name=".Settings" />
        <activity android:name=".RewardsMain" />
        <activity android:name=".ToDoMain" />
        <activity android:name=".PlannerMain" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".CreateAccount" />
        <activity android:name=".Menu" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>